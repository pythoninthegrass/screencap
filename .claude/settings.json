{
  "permissions": {
    "allow": [
      "Bash(ruff:*)",
      "Bash(pytest:*)",
      "Bash(python:*)",
      "Bash(pre-commit:*)",
      "Bash(screencap:*)",
      "Bash(uv:*)"
    ],
    "deny": [ ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "git diff --name-only HEAD | xargs -r pre-commit run --files"
          }
        ]
      }
    ]
  }
}
